{
    "name":        "adrenalinkin/entity-helper-bundle",
    "description": "This bundle provides help for the work with entities which managed by Doctrine",
    "type":        "symfony-bundle",
    "keywords":    ["symfony-bundle", "entity-helper", "doctrine"],
    "license":     "MIT",

    "authors": [
        {
            "email": "adrenalinkin@gmail.com",
            "name":  "Viktor Linkin",
            "role":  "Developer"
        }
    ],

    "require": {
        "doctrine/common":              "~2.4",
        "doctrine/orm":                 "~2.4",
        "php":                          "~5.6||~7.0",
        "symfony/config":               "~2.5||~3.0",
        "symfony/dependency-injection": "~2.5||~3.0",
        "symfony/http-kernel":          "~2.5||~3.0"
    },

    "suggest": {
        "symfony/symfony": "Allows more advanced functionality with full Symfony package"
    },

    "autoload": {
        "psr-4": {
            "Linkin\\Bundle\\EntityHelperBundle\\": ""
        }
    }
}
